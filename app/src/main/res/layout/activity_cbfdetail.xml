<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.shewei.southland.CBFDetailActivity">

    <TableLayout
        android:stretchColumns="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">

        <TableRow android:layout_marginLeft="4dp"
            android:layout_marginBottom="4dp">
            <TextView android:text="承包方编码"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black" />
            <EditText android:id="@+id/edt_cbf_bm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/abc_text_size_small_material" />
        </TableRow>

        <TableRow android:layout_marginLeft="4dp"
            android:layout_marginBottom="4dp">
            <TextView android:text="承包方（代表）"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black" />
            <EditText android:id="@+id/edt_cbf_mc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/abc_text_size_small_material" />
        </TableRow>

        <TextView android:text="承包方地址"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="4dp"
            android:textColor="@android:color/black" />
        <EditText android:id="@+id/edt_cbf_dz" android:textSize="@dimen/abc_text_size_small_material"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="4dp" />

        <TableRow android:layout_marginLeft="4dp"
            android:layout_marginBottom="4dp">
            <TextView android:text="证件类型"
                android:textColor="@android:color/black" />
            <EditText android:id="@+id/edt_cbf_zjlx" android:textSize="@dimen/abc_text_size_small_material"/>
        </TableRow>

        <TableRow android:layout_marginLeft="4dp"
            android:layout_marginBottom="4dp">
            <TextView android:text="证件号码"
                android:textColor="@android:color/black" />
            <EditText android:id="@+id/edt_cbf_zjhm" android:textSize="@dimen/abc_text_size_small_material"/>
        </TableRow>

        <TableRow android:layout_marginLeft="4dp"
            android:layout_marginBottom="4dp">
            <TextView android:text="家庭成员总数"
                android:textColor="@android:color/black" />
            <EditText android:id="@+id/edt_cbf_cysl" android:textSize="@dimen/abc_text_size_small_material"/>
        </TableRow>
    </TableLayout>

    <ListView android:id="@+id/lVi_CBF_JTCY"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
