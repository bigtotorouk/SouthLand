<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.shewei.southland.FBFDetailActivity">

    <TableLayout android:stretchColumns="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp">
            <TextView android:text="发包方编码"
                android:textColor="@android:color/black" />
            <EditText android:id="@+id/edt_fbf_bm"
                android:textSize="@dimen/abc_text_size_small_material" />
        </TableRow>

        <TableRow android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp">
            <TextView android:text="发包方名称"
                android:textColor="@android:color/black" />
            <EditText android:id="@+id/edt_fbf_mc"
                android:textSize="@dimen/abc_text_size_small_material" />
        </TableRow>

        <TableRow android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp">
            <TextView android:text="负责人姓名"
                android:textColor="@android:color/black" />
            <EditText android:id="@+id/edt_fbf_fzrxm"
                android:textSize="@dimen/abc_text_size_small_material" />
        </TableRow>

        <TableRow android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp">
            <TextView android:text="联系电话"
                android:textColor="@android:color/black" />
            <EditText android:id="@+id/edt_fbf_lxdh"
                android:textSize="@dimen/abc_text_size_small_material" />
        </TableRow>

        <TextView android:text="发包方负责人地址"
            android:textColor="@android:color/black" />
        <EditText android:id="@+id/edt_fbf_fzrdz"
            android:textSize="@dimen/abc_text_size_small_material" />

        <TableRow android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp">
            <TextView android:text="负责人证件类型"
                android:textColor="@android:color/black" />
            <EditText android:id="@+id/edt_fbf_fzrzjlx"
                android:textSize="@dimen/abc_text_size_small_material" />
        </TableRow>

        <TableRow android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp">
            <TextView android:text="证件号码"
                android:textColor="@android:color/black" />
            <EditText android:id="@+id/edt_fbf_fzrzjhm"
                android:textSize="@dimen/abc_text_size_small_material" />
        </TableRow>

    </TableLayout>

    <TextView android:text="调查记事"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:textColor="@android:color/black" />
    <EditText android:id="@+id/edt_fbf_dcjs"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textSize="@dimen/abc_text_size_small_material"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp" />

</LinearLayout>
